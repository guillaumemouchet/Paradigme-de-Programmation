
package ch.hearc.SA.labo2;

import java.util.Arrays;

public class Producteur implements Runnable
	{

	private Message msg;

	public Producteur(Message msg)
		{
		this.msg = msg;
		}

	@Override
	public void run()
		{
		while(true)
			{
			String name = Thread.currentThread().getName();
			System.out.println(name + " started");
			try
				{
				Thread.sleep(1000);
				synchronized (msg)
					{

					System.out.println(name + " shuffling the array : " + Arrays.toString(msg.shuffleArray()));

					//msg.notify();
					msg.notifyAll(); //Annonce à tout les consommateurs qu'ils peuvent venir
					//prendre une valeur existante.
					}
				}
			catch (InterruptedException e)
				{
				e.printStackTrace();
				}
			}
		}

	}
