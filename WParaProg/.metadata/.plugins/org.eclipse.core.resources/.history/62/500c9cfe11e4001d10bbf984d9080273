
package ch.hearc.SA.labo2.BlockingQueue;

import java.util.Arrays;
import java.util.concurrent.BlockingQueue;

public class Producteur implements Runnable
	{

	private BlockingQueue<Message> queue;

	public Producteur(BlockingQueue<Message> queue)
		{
		this.queue = queue;
		}

	@Override
	public void run()
		{
		String name = Thread.currentThread().getName();

		System.out.println(name + " started");

		while(true)
			{

				try
					{
					Thread.sleep(1000);

					Message msg = new Message(10);
					Integer[] new_array = msg.newArray();
					queue.put(msg);
					System.out.println("\n" + name + " creating an array : " + Arrays.toString(new_array) + "\n");

					}
				catch (InterruptedException e)
					{
					// TODO Auto-generated catch block
					e.printStackTrace();
					}

			}
	}

}
